<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="csci201.han.edward.fi.draw.LoginGUI">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw.fi"
        android:textSize="80dp"
        android:textColor="@color/black"
        android:fontFamily="varela round"
        android:id="@+id/appNameId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="375dp"
        android:id="@+id/dragonImg"
        android:src="@drawable/small_dragon"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/appNameId"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/dragonImg"
        android:layout_marginTop="-55dp"
        android:hint="Enter Username"
        android:layout_centerHorizontal="true"
        android:text=""/>
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:layout_below="@+id/editText"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:text=""/>


    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:id="@+id/login_button"
        android:text="Login"
        android:background="@color/colorBlue"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="165dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/login_button"
        android:id="@+id/create_account_btn"
        android:text="New Account"
        android:background="@color/colorBlue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/sandbox_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:text="Sandbox"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="2dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorBlue"
        android:layout_below="@id/create_account_btn"
        android:layout_alignParentStart="true" />


</RelativeLayout>
